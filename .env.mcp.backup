GITHUB_TOKEN=your_github_token_here

# Database MCP Server
MCP_DB_PASSWORD=your_secure_database_password

# Grafana MCP Server
GRAFANA_PASSWORD=your_grafana_password

# Network Configuration
MCP_NETWORK_SUBNET=172.20.0.0/16

# Server Ports
GITHUB_SERVER_PORT=3001
