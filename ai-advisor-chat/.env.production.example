# Production Environment Configuration Example
# Copy this file to .env.production and fill in your values

# === Open Router Configuration ===
OPENROUTER_API_KEY=your_openrouter_api_key_here

# === Clerk Authentication ===
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# === Convex Database ===
CONVEX_DEPLOYMENT=your_convex_deployment_name
CONVEX_PROD_URL=https://your-convex-app.convex.cloud

# === Application Configuration ===
NEXT_PUBLIC_APP_URL=https://your-app-domain.com
NEXT_PUBLIC_APP_NAME="AI Advisor Chat"

# === Analytics & Monitoring ===
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# === MCP Servers Configuration ===
# MCP_SERVER_GITHUB_TOKEN=your_github_token_for_mcp
# MCP_SERVER_PLAYWRIGHT_HEADLESS=true

# === Security ===
# CSP_NONCE_SECRET=your_csp_nonce_secret
# NEXTAUTH_SECRET=your_nextauth_secret

# === Performance ===
# ANALYZE=false
# BUNDLE_ANALYZER=false