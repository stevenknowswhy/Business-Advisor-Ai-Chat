# MCP Servers Configuration - Example
# Copy this file to .env.mcp and fill in your values
# Do not commit .env.mcp to version control

# GitHub MCP Server
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo, user, admin:org
GITHUB_TOKEN=your_github_personal_access_token_here

# Database MCP Server
# Generate a secure password for the PostgreSQL database
MCP_DB_PASSWORD=your_secure_database_password_here

# Grafana MCP Server
# Admin password for Grafana web interface
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Network Configuration
# Docker network subnet for MCP services
MCP_NETWORK_SUBNET=172.20.0.0/16

# Server Ports
# Port assignments for MCP services
GITHUB_SERVER_PORT=3001
FILESYSTEM_SERVER_PORT=3002
SHADCN_SERVER_PORT=3003
PROXY_PORT=8080
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
DOCS_PORT=8081

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
# Generate a secure JWT secret for authentication
JWT_SECRET=your_secure_jwt_secret_here

# CORS Configuration
# Allowed origins for API access
CORS_ORIGIN=http://localhost:3000

# Performance Configuration
NODE_ENV=production
MAX_MEMORY=512mb
TIMEOUT=30000

# Additional Security Settings
# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_TTL=3600

# API configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_db
DB_USER=mcp_user

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Monitoring configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000